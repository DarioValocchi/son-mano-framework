##
## The values for the monitoring triggers to differentiate between scaling options
##
number_of_scale_levels: 2

scale_level_at_boot: 1

triggers:
  - current_scaling: 1
    goto_scaling: 2
    trigger_metric: "CPU_LOAD"
    trigger_value: 0.80
    trigger_vnf: "vnf_loadbalancer"
  - current_scaling: 2
    goto_scaling: 1
    trigger_metric: "CPU_LOAD"
    trigger_value: 0.10
    trigger_vnf: "vnf_loadbalancer" 

   
